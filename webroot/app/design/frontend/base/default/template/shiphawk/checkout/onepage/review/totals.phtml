/**
 * @see Mage_Checkout_Block_Cart_Totals
 */
?>
<?php if ($this->getTotals()): ?>
<tfoot>
    <?php $_colspan = $this->helper('tax')->displayCartBothPrices() ? 5 : 3; ?>
    <?php echo $this->renderTotals(null, $_colspan); ?>
    <!-- For accessories -->
    <?php
        $session        = Mage::getSingleton('checkout/session');
        $accessories    = $session->getData("shipment_accessories");
        $currencySymbol = Mage::app()->getLocale()->currency(Mage::app()->getStore()->getCurrentCurrencyCode())->getSymbol();
    ?>
    <?php if (!empty($accessories['data'])):?>
        <tr>
            <td class="a-right" colspan="3">
                <?php echo $this->helper('sales')->__('Accessorials:') ?><br/>
                <?php foreach($accessories['data'] as $code_rate => $accessor):?>
                    <!--<span class="shipping-ratio-origins-type"><?php /*echo str_replace("'", '' , $type);*/?></span>-->
                    <ul>
                        <?php foreach($accessor as $values):?>
                            <?php foreach($values as $value):?>
                                <li><?php $acc_price  = ($value['value']) ? ($currencySymbol . $value['value']) : 'included'; $actype = ucwords(implode(' ', explode('_', $value['name']))); echo ucfirst(str_replace("'", '', $actype . ' - ' . $acc_price));?></li>
                            <?php endforeach;?>
                        <?php endforeach;?>
                    </ul>
                    <br/>
                <?php endforeach;?>
            </td>
            <td class="a-right"></td>
        </tr>
    <?php endif;?>
    <?php echo $this->renderTotals('footer', $_colspan); ?>
    <?php if ($this->needDisplayBaseGrandtotal()):?>
    <tr>
        <td class="a-right" colspan="<?php echo $_colspan; ?>">
            <small><?php echo $this->helper('sales')->__('Your credit card will be charged for') ?></small>
        </td>
        <td class="a-right">
            <small><?php echo $this->displayBaseGrandtotal() ?></small>
        </td>
    </tr>
    <?php endif?>
</tfoot>
<?php endif; ?>
